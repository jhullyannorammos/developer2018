<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/application?useTimezone=true&amp;serverTimezone=UTC</property>
    <property name="hibernate.connection.username">root</property>    
    <property name="hibernate.connection.password">$Pr!ngf!3ld</property>
    <property name="hibernate.connection.autocommit">false</property>

    <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
    <property name="current_session_context_class">thread</property>
    <property name="connection.pool_size">1</property>
    <property name="hbm2ddl.auto">update</property>
    <property name="show_sql">true</property>
    
    <mapping class="br.com.application.domain.SoftwareLicense"/>
    <mapping class="br.com.application.domain.Movimentacao"/>
    <mapping class="br.com.application.domain.Departamento"/>
    <mapping class="br.com.application.domain.Colaborador"/>
    <mapping class="br.com.application.domain.Patrimonio"/>
    <mapping class="br.com.application.domain.Mercadoria"/>
    <mapping class="br.com.application.domain.Fornecedor"/>
    <mapping class="br.com.application.domain.Usuario"/>
    <mapping class="br.com.application.domain.Estoque"/>
    <mapping class="br.com.application.domain.Produto"/>
    <mapping class="br.com.application.domain.Cidade"/>
    <mapping class="br.com.application.domain.Modelo"/>
       
  </session-factory>
</hibernate-configuration>
